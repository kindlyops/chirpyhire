        #reply_container.has_focus
          - if current_account.person.avatar.url.present?
            = image_tag current_account.person.avatar.url(:medium), class: 'member_image thumb_36'
          - else
            span class=="member_image thumb_36 #{current_account.person.decorate.hero_pattern_classes}"
          .inline_message_input_container
            form
              .message_input
                textarea.form-control row="1" type="text" placeholder="Take a note..." required=true
          .reply_container_info
            .reply_broadcast_buttons_container.justify-content-end
              button.reply_send.btn.btn-small.btn-outline type="button" Save
