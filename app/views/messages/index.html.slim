.messages
  .top
    span
      | To:
      '
      span.name = user.handle
  = link_to_next_page @messages, 'Load more messages', class: 'load_more', remote: true
  .chat
    = render partial: "messages/message", collection: messages.reverse
  .write
    = form_for [user, user.messages.build] do |f|
      = f.text_area(:body)
      button type="submit" disabled==user.cannot_receive_messages?
        ' Send
        i.fa.fa-paper-plane
