= title "Teams Â· ChirpyHire"
.ch--Page.settings.teams
  = render partial: "settings/header"
  .ch--main
    .ch--vertical-navigation
      .ch--vertical-navigation--inner
        .ch--vertical-navigation-header
          h3.small-uppercase App and Teams
        .ch--vertical-navigation-links
          = nav_link_to 'General settings', organization_settings_general_path(@organization), class: 'ch--vertical-navigation-link'
          = nav_link_to 'Team members', organization_settings_team_members_path(@organization), class: 'ch--vertical-navigation-link'
          = nav_link_to 'Teams', organization_settings_teams_path(@organization), class: 'ch--vertical-navigation-link'
    .ch--sub-main
      .ch--main-menu
        .ch--main-menu--left
          h2 
            | Teams for
            '
            = @organization.name
        .ch--main-menu--right
          = link_to new_organization_settings_team_path(@organization), class: 'btn btn-primary' do
            span Create team
      .card.ch--sub-main-content
        .card-block
          .card
            ul.list-group.list-group-flush
              = render partial: "organizations/teams/team", collection: @teams, locals: { organization: @organization }


